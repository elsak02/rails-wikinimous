<div class="container">
<%= simple_form_for(@article) do |f| %>
  <div class="form-section">
    <%= f.label :title %>
   </div>
    <%= f.text_field :title %>

  <div class="form-section">
      <%= f.label :content %>
   </div>
    <%= f.text_field :content %>

  <div class="form-section">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
</div>
